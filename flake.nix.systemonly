{

  description = "thinkpad p50 flake";

  inputs = {
    nixpkgs.url = "nixpkgs/nixos-unstable";
  };

  outputs = { self,nixpkgs, ...}: 
  let 
    lib = nixpkgs.lib;
    system = "x86_64-linux";
  in
    {
    nixosConfigurations = {
      nixhost = lib.nixosSystem {
        inherit system; 
        modules = [ ./configuration.nix ];
      };
    };
  };

}
